{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "@open-foody/types/*": ["../types/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../types" },
  ]
}