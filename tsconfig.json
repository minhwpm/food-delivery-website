{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@open-foody/nextjs-app/*": ["apps/nextjs-app/src/*"],
      "@open-foody/remix-app/*": ["apps/remix-app/src/*"],
      "@open-foody/react-components/*": ["packages/react-components/src/*"],
      "@open-foody/types/*": ["packages/types/src/*"],
      "@open-foody/redux-store/*": ["packages/redux-store/src/*"],
      "@open-foody/utils/*": ["packages/utils/src/*"],
    },
    "jsx": "react", // Add this line
    "module": "esnext",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/*",
    "apps/**/*"
  ]
}